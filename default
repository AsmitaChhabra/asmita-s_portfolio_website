server {
    listen 8080;
    root /home/site/wwwroot;

    # This line tells NGINX to look for index.html first, then index.php
    index index.html index.php; 

    # This block ensures static files (like CSS, JS, images) are served directly
    location / {
        try_files $uri $uri/ /index.html$is_args$query_string;
    }

    # This block ensures PHP files are executed
    location ~ \.php$ {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_pass unix:/var/run/php-fpm.sock;
        fastcgi_index index.php;
    }
}