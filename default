server {
    listen 8080;
    root /home/site/wwwroot;

    # NGINX looks for index.html first, then index.php
    index index.html index.php; 

    # This block handles all requests and ensures static files are served correctly.
    location / {
        # Tries to serve the request as a file ($uri), then as a directory ($uri/),
        # and finally serves index.html for all other non-existent paths (SPA routing).
        try_files $uri $uri/ /index.html; 
    }

    # This block ensures PHP files are executed
    location ~ \.php$ {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_pass unix:/var/run/php-fpm.sock;
        fastcgi_index index.php;
    }
}